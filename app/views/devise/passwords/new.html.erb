<% content_for :header do %>
  <hgroup class="center">
    <a href="/"><strong id="logo">Forge</strong></a>
    <h1>Forgotten Password?</h1>
    <p>Reset your account password</p>
  </hgroup>
<% end %>
  
  <div id="modal" class="animate show inline">

    <div class="viewport">
    
      <div id="register">

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        
          <% if resource.errors.any? %>
            <div class="errors">
              <%= devise_error_messages! %>
            </div>
          <% end %>

          <% if flash[:notice] %>
            <fieldset>
              <h2>Thanks!</h2>
              <p><%= flash[:notice] %></p>
            </fieldset>
          <% else %>
        
          <fieldset>
            <%= f.label :email %>
            <%= f.email_field :email %>
          </fieldset>
          
          <fieldset class="actions">
            <button class="button"><b>Send me reset instructions</b></button>
          </fieldset>  
          <% end %>

        <% end %>
            
      </div>
          
    </div>

  </div>