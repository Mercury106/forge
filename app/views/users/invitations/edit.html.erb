<section class="now"></section>

<div id="modal" class="animate show no-dismiss register">

  <ul class="tabs">
    <li class=""><a>Welcome to Forge</a></li>
  </ul>

  <div class="viewport">
  
    <div id="register">
          
      <%= form_for resource, :as => resource_name, :url => user_invitation_path, :html => { :method => :put, :id => "update_card" } do |f| %>
      
        <%= devise_error_messages! %>
        
        <% session[:invitation_token] ||= resource.invitation_token %>
        <% resource.invitation_token ||= session[:invitation_token] %>
        
        <%= f.hidden_field :invitation_token %>

        <fieldset>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </fieldset>

        <fieldset>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </fieldset>        

        <fieldset>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </fieldset>

        <fieldset class="actions">
          <p><%= f.submit t("devise.invitations.edit.submit_button"), :class => "green button" %></p>
        </fieldset>
          
      <% end %>
          
    </div>
        
  </div>

</div>

<div id="overlay"></div>

<script type="text/javascript">
  $('#overlay').show()
</script>
