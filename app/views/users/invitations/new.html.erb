<div id="sign">
<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for resource, :as => resource_name, :url => user_invitation_path, :html => {:method => :post} do |f| %>
  <%= devise_error_messages! %>

<% resource.class.invite_key_fields.each do |field| -%>
  <fieldset><%= f.label field %>
  <%= f.text_field field %></fieldset>
<% end -%>

  <fieldset class="actions">
    <p><%= f.submit t("devise.invitations.new.submit_button"), :class => "green button" %></p>
  </fieldset>
  
<% end %>

</div>